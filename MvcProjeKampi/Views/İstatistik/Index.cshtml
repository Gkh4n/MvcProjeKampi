@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class="card-deck">
    <div class="card text-white bg-cyan mb-4 " style="max-width: 10rem;">
        <div class="card-header">İSTATİSTİK</div>
        <div class="card-body">
            <h5 class="card-title">Toplam Kategori Sayısı</h5>
            <br />
            <h5 class="card-text"> @ViewBag.CategoryCount</h5>
        </div>
    </div>
    <div class="card text-white bg-fuchsia mb-4 " style="max-width: 15rem;">
        <div class="card-header">İSTATİSTİK</div>
        <div class="card-body">
            <h5 class="card-title">Yazılım Kategorisi Başlık Sayısı</h5>
            <br />
            <h5 class="card-text"> @ViewBag.Heading</h5>
        </div>
    </div>
    <div class="card text-white bg-purple mb-4 " style="max-width: 29rem; ">
        <div class="card-header">İSTATİSTİK</div>
        <div class="card-body">
            <h5 class="card-title">Yazarların İsimlerinde "a" Harfi Bulunanlar</h5>
            <br />
            <h5 class="card-text"> @ViewBag.Writer</h5>
        </div>
    </div>
</div>
<div class="card-deck">


    <div class="card text-white bg-fuchsia mb-6 " style="max-width: 25rem;">
        <div class="card-header">İSTATİSTİK</div>
        <div class="card-body">
            <h5 class="card-title">En Fazla Başlığı Olan Kategori Adı</h5>
            <br />
            <h5 class="card-text"> @ViewBag.HeadingMax</h5>
        </div>
    </div>
    <div class="card text-white bg-primary mb-6 " style="max-width: 30rem; height:auto">
        <div class="card-header">İSTATİSTİK</div>
        <div class="card-body">
            <h5 class="card-title">Kategoriler Tablosunda T/F Farkı </h5>
            <br />
            <h5 class="card-text"> @ViewBag.StatusFark</h5>
        </div>
    </div>
</div>